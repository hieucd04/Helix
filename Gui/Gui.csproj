<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.1</TargetFramework>
        <LangVersion>latest</LangVersion>
        <OutputType>Exe</OutputType>
        <AssemblyName>Helix</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="2.43.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Crawler\Crawler.csproj" />
        <ProjectReference Include="..\IPC\IPC.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="node_modules\**" />
        <EmbeddedResource Remove="node_modules\**" />
        <None Remove="node_modules\**" />
    </ItemGroup>

    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
        <Exec Command="node deployment\build.js -o $(OutDir)" />
    </Target>
    
</Project>
